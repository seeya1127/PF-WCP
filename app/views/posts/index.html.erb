<%= form_with model: @post, local:true do |f| %>
<h2>New Post</h2>

<h4>画像</h4>
<%= f.attachment_field :post_image, class: "input" %>
<h4>本文</h4>
<%= f.text_field :text %>

<%= f.submit '投稿' %>

<% end %>

<div class="title">
  <div class="container">
    <h4>投稿一覧</h4>
  </div>
</div>

<div class="container">


    <% @posts.each do |post| %>
        <div class="card">
          <div class="card-image">
            <!--<figure class="image is-4by3">-->
              <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :post_image, class: "post_image" %>
              <% end %>
            <!--</figure>-->
          </div>
            <p class="card-text">
            <%= post.text %>
            </p>
            <% if post.favorited_by?(current_user) %>
              <P><%= link_to "♥︎", post_favorites_path(post), method: :delete %></P>
             <% else %>
              <P><%= link_to "♡︎", post_favorites_path(post), method: :post %></P>
            <% end %>
          <% end %>
          </div>
</div>