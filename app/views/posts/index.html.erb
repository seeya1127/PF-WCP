<div class="container">
<h4>タグリスト</h4>
<% @tag_list.each do |list| %>
<span>
  <%= link_to list.tag_name, tag_posts_path(tag_id: list.id) %>
  <%= "(#{list.posts.count})" %>
</span>
<% end %>

<div class="title">
    <h4>投稿一覧</h4>
</div>


  <div class="row">
<% @posts.each do |post| %>
<div class="col-md-3">
 <%= render 'post', post: post %>
</div>
<% end %>
  </div>
</div>