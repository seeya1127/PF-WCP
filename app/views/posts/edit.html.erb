<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <%= form_with model:@post, local:true do |f| %>
      <h2>Edit Post</h2>
      
      <h4>画像</h4>
      <%= f.attachment_field :post_image, class: "input" %>
      <h4>本文</h4>
      <%= f.text_field :text, class: "col-md-12" %>
      
      <%= f.submit '保存' %>
      
      <% end %>
      </div>
      <div class="col-3"></div>
  </div>
</div>
