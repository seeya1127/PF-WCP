<div class="card-columns">
  <div class="card">
    <div class="card-img">
        <%= link_to post_path(post.id) do %>
        <%= attachment_image_tag post, :post_image, class: 'card-img-top' %>
    </div>
      <p class="card-text">
      <%= post.text %>
      <% end %>
      </p>
      <ul class="favorite">
        <%= render 'favorites/favorite', post: post %>
      </ul>
  </div>
</div>