<div class="card-columns">
    <div class="shadow-lg card border-secondary" style="width: 15rem;">
      <div class="card-img">
          <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :post_image, class: 'card-img-top', size:"200x200" %>
          <% end %>
      </div>
        <div class="card-title">
          </ul>
          <%= link_to user_path(post.user.id) do %>
          <%= attachment_image_tag post.user,:profile_image, size: "30x30", class:"rounded-circle" %> <%= post.user.name %>
          <% end %>
          <%= render 'favorites/favorite', post: post %>
        </div>
        <p class="card-text">
          <%= link_to post_path(post.id) do %>
          <%= post.text %>
          <% end %>
        </p>
        <div align="right">
        <%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
        </div>
    </div>
</div>