<!DOCTYPE html>
<html>
  <head>
    <title>ALCOfollow</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= include_gon %>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Shippori+Mincho+B1:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">
  </head>

  <body class="full-page">
    <div class="wrapper">
    <div class="container">
    <nav class="navbar navbar-expand-lg sticky-top" style="background-color:#FF8C00;">
      <div class="container-fluid">
        <a class="text-dark navbar-brand p-2">ALCOfollow</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto nav-fill w-100">
              <div class="btn-group btn-group-justified w-100">
            <% if user_signed_in? %>
              <li class="nav-item btn btn-warning">
                <%= link_to "Home", root_path, class:"fas fa-home text-dark" %>
              </li>
              <li class="nav-item btn btn-warning">
                <%= link_to "Users", users_path, class:"fas fa-users text-dark" %>
              </li>
              <li class="nav-item btn btn-warning">
                <%= link_to "Posts", posts_path, class:"fas fa-image text-dark" %>
              </li>
              <li class="nav-item btn btn-warning">
                <%= link_to "new-post", new_post_path, class:"fas fa-plus text-dark" %>
              </li>
              <li class="nav-item btn btn-warning">
                <%= link_to "Notice", notifications_path, class:"fas fa-bell text-dark" %>
              </li>
              <li class="nav-item btn btn-warning">
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"fas fa-sign-out-alt text-dark" %>
              </li>
            <% else %>
              <li class="nav-item btn btn-warning">
                <%= link_to "Home", root_path, class:"fas fa-home text-dark" %>
              </li>
              <li class="nav-item btn btn-warning">
                <%= link_to "Signup", new_user_registration_path, class:"fas fa-user-plus text-dark" %>
              </li>
              <li class="nav-item btn btn-warning">
                <%= link_to "Login", user_session_path, class:"fas fa-sign-out-alt text-dark" %>
              </li>
            <% end %>
            </ul>
            </div>
          </div>
        </div>
    </nav>
    <%= yield %>
    <footer class="footer">©ALCOfollow︎</footer>
    </div>
    </div>
  </body>
</html>