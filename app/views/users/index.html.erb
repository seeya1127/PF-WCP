
<div class="container-md">
    <div class="row">
        <div class="col-12">
            <h4>ユーザー一覧</h4>
            <table class="table">
            	<tbody>
            		<tr>
            			<th>#</th>
            			<th>ニックネーム</th>
            			<th>自己紹介</th>
            			<th></th>
            			<th></th>
            			<th></th>
            			<th></th>
            		</tr>
            		<% @users.each do |user| %>
            		<tr>
            		    <td><%= user.id %></td>
            			<td><%= attachment_image_tag user, :profile_image, size: "30x30" %></td>
            			<td><%= user.name %></td>
            			<td><%= user.introduction %></td>
            			<% if current_user != user %>
            			<td><%= render 'follow', user: user %></td>
                        <td><%= link_to "チャットする", chat_path(user.id) %></td>
                        <% end %>
                		<td><%= link_to "show", user_path(user.id) %></td>
            		</tr>
            		<% end %>
            	</tbody>
            </table>
        </div>
    </div>
</div>