<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <h2>ユーザー詳細</h2>
      <div class="card">
        <div class="card-img">
          <%= attachment_image_tag @user, :profile_image, class: 'card-img-top' %>
        </div>
        <p class="card-title">
          <%= @user.name %>
        </p>
        <p class="card-text">
          <%= @user.introduction %>
        </p>
      </div>
        
      <% if current_user != @user %>
        <%= render 'follow', user: @user %>
        <%= link_to "チャットする", chat_path(@user.id) %>
      <% end %>

      <% if @user == current_user %>
        <%= link_to "edit", edit_user_path(@user.id) %>
      <% end %>
    </div>
    <div class="col-7">
      <h2><%= @user.name %>の投稿</h2>
      <% @posts.each do |post| %>
        <%= render 'posts/post', post: post %>
      <% end %>
    </div>
    <div class="col-1"></div>
  </div>
</div>


