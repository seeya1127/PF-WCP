<h2>ユーザー詳細</h2>

<%= @user.name %>

<%= @user.introduction %>

<%= attachment_image_tag @user, :profile_image, size: "40x40" %>

<% if current_user != @user %>
  <%= render 'follow', user: @user %>
  <%= link_to "チャットする", chat_path(@user.id) %>
<% end %>

<% if @user == current_user %>
     <%= link_to "edit", edit_user_path(@user.id) %>
    <% end %>

<h2>ユーザーの投稿</h2>
<% @posts.each do |post| %>
  <%= render 'posts/post', post: post %>
<% end %>


