<h2>ユーザー詳細</h2>

<%= @user.name %>

<%= attachment_image_tag @user, :profile_image, size: "40x40" %>

<% if current_user != @user %>
  <% if @user.followed_by?(current_user) %>
    <p><%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %></p>
  <% else %>
    <p><%= link_to "フォローする", user_relationships_path(@user.id), method: :post %></p>
  <% end %>
<% end %>

<h2>ユーザーの投稿</h2>
<% @posts.each do |post| %>
<div class="card">
  <div class="card-image">
  <%= attachment_image_tag post, :post_image %>
  </div>
  <div class="card-body">
    <%= post.text %>
  </div>
  <% end %>
</div>