<div class="container" style="padding:40px">
  <div class="row">
    <div class="col-3"></div>
    <div class="shadow-lg col-6">
      <%= form_with model:@user, local:true do |f| %>
      <h2>Edit User</h2>

      <h4>名前</h4>
      <%= f.text_field :name, class: "col-md-12" %>
      <h4>画像</h4>
      <%= f.attachment_field :profile_image, class: "input" %>
      <h4>本文</h4>
      <%= f.text_field :introduction, class: "col-md-12" %>

      <%= f.submit '保存', class: "btn btn-primary" %>

      <% end %>
      </div>
      <div class="col-3"></div>
  </div>
</div>